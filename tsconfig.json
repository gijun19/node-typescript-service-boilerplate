{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "module": "commonjs",
    "pretty": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "inlineSourceMap": true,
    "strict": false,
    "target": "es2019",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"],
      "~/*": ["./*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__", "dist"]
}
